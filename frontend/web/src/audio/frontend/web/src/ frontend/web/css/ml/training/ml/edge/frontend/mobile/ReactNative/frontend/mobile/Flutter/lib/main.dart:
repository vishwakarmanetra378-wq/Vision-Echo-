import 'package:flutter/material.dart';
import 'package:flutter/services.dart';
import 'package:vibration/vibration.dart';
import 'package:speech_to_text/speech_to_text.dart' as stt;
import 'package:soundpool/soundpool.dart';
import 'package:permission_handler/permission_handler.dart';
import 'dart:async';
import 'dart:typed_data';
import 'package:http/http.dart' as http;
import 'dart:convert';

void main() {
  runApp(const VisionEchoApp());
}

class VisionEchoApp extends StatelessWidget {
  const VisionEchoApp({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'Vision-Echo',
      theme: ThemeData.dark().copyWith(
        colorScheme: ColorScheme.fromSeed(
          seedColor: Colors.deepPurple,
          brightness: Brightness.dark,
        ),
        useMaterial3: true,
      ),
      home: const HomeScreen(),
    );
  }
}

class HomeScreen extends StatefulWidget {
  const HomeScreen({super.key});

  @override
  _HomeScreenState createState() => _HomeScreenState();
}

class _HomeScreenState extends State<HomeScreen> {
  // State variables
  bool _isCalibrated = false;
  bool _isNavigating = false;
  String _status = 'Ready to calibrate';
  List<Obstacle> _obstacles = [];
  double _connectionStrength = 100.0;
  
  // Services
  final AudioProcessor _audioProcessor = AudioProcessor();
  final AzureEchoService _azureService = AzureEchoService();
  final stt.SpeechToText _speech = stt.SpeechToText();
  
  // Timer for navigation loop
  Timer? _navigationTimer;
  
  @override
  void initState() {
    super.initState();
    _initializeApp();
  }
  
  Future<void> _initializeApp() async {
    await _requestPermissions();
    await _audioProcessor.initialize();
    await _setupSpeechRecognition();
  }
  
  Future<void> _requestPermissions() async {
    Map<Permission, PermissionStatus> statuses = await [
      Permission.microphone,
      Permission.bluetooth,
      Permission.notification,
    ].request();
    
    if (statuses[Permission.microphone] != PermissionStatus.granted) {
      _showAlert('Microphone permission is required for Vision-Echo to work.');
    }
  }
  
  Future<void> _setupSpeechRecognition() async {
    bool available = await _speech.initialize();
    if (!available) {
      _showAlert('Speech recognition not available');
    }
  }
  
  Future<void> _calibrateEnvironment() async {
    setState(() {
      _status = 'Calibrating environment...';
    });
    
    try {
      final calibrationData = await _audioProcessor.startCalibration();
      final result = await _azureService.calibrate(calibrationData);
      
      if (result['success']) {
        setState(() {
          _isCalibrated = true;
          _status = 'Calibration complete!';
        });
        
        // Provide haptic feedback
        Vibration.vibrate(duration: 100);
        await Future.delayed(const Duration(milliseconds: 50));
        Vibration.vibrate(duration: 100);
        
        // Announce for accessibility
        SystemChannels.accessibility.invokeMethod('announce', 'Calibration complete');
      }
    } catch (e) {
      setState(() {
        _status = 'Calibration failed';
      });
      _showAlert('Calibration error: $e');
    }
  }
  
  Future<void> _startNavigation() async {
    if (!_isCalibrated) {
      _showAlert('Please calibrate first');
      return;
    }
    
    setState(() {
      _isNavigating = true;
      _status = 'Navigation active';
    });
    
    // Start navigation loop
    _navigationTimer = Timer.periodic(const Duration(milliseconds: 200), (_) {
      _processEchoCycle();
    });
    
    // Accessibility announcement
    SystemChannels.accessibility.invokeMethod('announce', 'Navigation started');
  }
  
  Future<void> _processEchoCycle() async {
    try {
      // Emit chirp
      await _audioProcessor.emitChirp();
      
      // Record echo
      final echoData = await _audioProcessor.recordEcho(500);
      
      // Process with Azure
      final result = await _azureService.processEcho(echoData);
      
      if (result['obstacles'] != null && result['obstacles'].isNotEmpty) {
        final obstacles = (result['obstacles'] as List)
            .map((o) => Obstacle.fromJson(o))
            .toList();
        
        setState(() {
          _obstacles = obstacles;
        });
        
        // Provide feedback
        _provideSpatialFeedback(obstacles);
        _provideHapticFeedback(obstacles);
        
        // Update status
        final closest = obstacles.reduce((a, b) => 
            a.distance < b.distance ? a : b);
        setState(() {
          _status = '${closest.type} ${closest.distance.toStringAsFixed(1)}m ahead';
        });
      }
    } catch (e) {
      print('Echo cycle error: $e');
    }
  }
  
  void _provideSpatialFeedback(List<Obstacle> obstacles) {
    // Group obstacles by direction
    final left = obstacles.where((o) => o.angle < -30).toList();
    final center = obstacles.where((o) => o.angle.abs() <= 30).toList();
    final right = obstacles.where((o) => o.angle > 30).toList();
    
    // Play spatial sounds
    _audioProcessor.playSpatialSounds(
      leftDist: left.isNotEmpty ? left.first.distance : null,
      centerDist: center.isNotEmpty ? center.first.distance : null,
      rightDist: right.isNotEmpty ? right.first.distance : null,
    );
  }
  
  void _provideHapticFeedback(List<Obstacle> obstacles) {
    if (obstacles.isEmpty) return;
    
    final closest = obstacles.reduce((a, b) => 
        a.distance < b.distance ? a : b);
    
    if (closest.distance < 1) {
      // Very close
      Vibration.vibrate(pattern: [100, 50, 100, 50, 100]);
    } else if (closest.distance < 2) {
      // Close
      Vibration.vibrate(pattern: [200, 100]);
    } else if (closest.distance < 3) {
      // Medium
      Vibration.vibrate(duration: 100);
    }
  }
  
  void _stopNavigation() {
    _navigationTimer?.cancel();
    _navigationTimer = null;
    
    setState(() {
      _isNavigating = false;
      _status = 'Navigation stopped';
      _obstacles.clear();
    });
    
    _audioProcessor.stop();
    
    SystemChannels.accessibility.invokeMethod('announce', 'Navigation stopped');
  }
  
  Future<void> _handleVoiceCommand() async {
    if (!_speech.isListening) {
      await _speech.listen(
        onResult: (result) {
          if (result.finalResult) {
            _processVoiceCommand(result.recognizedWords);
          }
        },
      );
    } else {
      _speech.stop();
    }
  }
  
  void _processVoiceCommand(String command) {
    final cmd = command.toLowerCase();
    
    if (cmd.contains('calibrate')) {
      _calibrateEnvironment();
    } else if (cmd.contains('start navigation')) {
      _startNavigation();
    } else if (cmd.contains('stop navigation')) {
      _stopNavigation();
    } else if (cmd.contains('what is in front')) {
      _describeFrontObstacles();
    } else if (cmd.contains('emergency')) {
      _emergencyStop();
    } else {
      _speakResponse('Command not recognized: $command');
    }
  }
  
  void _describeFrontObstacles() {
    final frontObstacles = _obstacles
        .where((o) => o.angle.abs() <= 30)
        .toList();
    
    if (frontObstacles.isEmpty) {
      _speakResponse('Path is clear');
    } else {
      final closest = frontObstacles.first;
      _speakResponse('${closest.type} ${closest.distance.toStringAsFixed(1)} meters ahead');
    }
  }
  
  void _emergencyStop() {
    _stopNavigation();
    Vibration.vibrate(pattern: [500, 200, 500, 200, 500]);
    setState(() {
      _status = 'EMERGENCY STOP';
    });
    
    _azureService.sendEmergencyAlert();
  }
  
  void _speakResponse(String text) {
    // Implement text-to-speech
    print('Speaking: $text');
  }
  
  void _showAlert(String message) {
    showDialog(
      context: context,
      builder: (context) => AlertDialog(
        title: const Text('Vision-Echo'),
        content: Text(message),
        actions: [
          TextButton(
            onPressed: () => Navigator.pop(context),
            child: const Text('OK'),
          ),
        ],
      ),
    );
  }
  
  @override
  void dispose() {
    _navigationTimer?.cancel();
    _audioProcessor.dispose();
    super.dispose();
  }
  
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      body: Container(
        decoration: BoxDecoration(
          gradient: LinearGradient(
            begin: Alignment.topCenter,
            end: Alignment.bottomCenter,
            colors: [
              Colors.deepPurple.shade900,
              Colors.black,
            ],
          ),
        ),
        child: SafeArea(
          child: Column(
            children: [
              // Header
              _buildHeader(),
              
              // Main content
              Expanded(
                child: SingleChildScrollView(
                  padding: const EdgeInsets.all(16),
                  child: Column(
                    children: [
                      // Calibration Section
                      _buildSection(
                        title: 'Calibration',
                        child: _buildCalibrationSection(),
                      ),
                      
                      const SizedBox(height: 16),
                      
                      // Navigation Section
                      _buildSection(
                        title: 'Navigation',
                        child: _buildNavigationSection(),
                      ),
                      
                      const SizedBox(height: 16),
                      
                      // Obstacle Visualization
                      _buildSection(
                        title: 'Obstacles Detected',
                        child: _buildObstacleVisualization(),
                      ),
                      
                      const SizedBox(height: 16),
                      
                      // Voice Commands
                      _buildSection(
                        title: 'Voice Control',
                        child: _buildVoiceControlSection(),
                      ),
                    ],
                  ),
                ),
              ),
              
              // Footer
              _buildFooter(),
            ],
          ),
        ),
      ),
    );
  }
  
  Widget _buildHeader() {
    return Container(
      padding: const EdgeInsets.all(20),
      decoration: BoxDecoration(
        color: Colors.deepPurple.shade800,
        borderRadius: const BorderRadius.only(
          bottomLeft: Radius.circular(20),
          bottomRight: Radius.circular(20),
        ),
      ),
      child: Column(
        children: [
          const Text(
            'Vision-Echo',
            style: TextStyle(
              fontSize: 32,
              fontWeight: FontWeight.bold,
              color: Colors.white,
            ),
          ),
          const SizedBox(height: 4),
          const Text(
            'Acoustic Navigation',
            style: TextStyle(
              fontSize: 14,
              color: Colors.white70,
            ),
          ),
          const SizedBox(height: 16),
          Row(
            mainAxisAlignment: MainAxisAlignment.center,
            children: [
              Container(
                width: 12,
                height: 12,
                decoration: BoxDecoration(
                  color: _isNavigating ? Colors.green : Colors.orange,
                  shape: BoxShape.circle,
                ),
              ),
              const SizedBox(width: 8),
              Text(
                _status,
                style: const TextStyle(
                  fontSize: 16,
                  color: Colors.white,
                  fontWeight: FontWeight.w500,
                ),
              ),
            ],
          ),
          const SizedBox(height: 8),
          Text(
            'Connection: ${_connectionStrength.toInt()}%',
            style: const TextStyle(
              fontSize: 12,
              color: Colors.white70,
            ),
          ),
        ],
      ),
    );
  }
  
  Widget _buildSection({required String title, required Widget child}) {
    return Container(
      decoration: BoxDecoration(
        color: Colors.grey.shade900,
        borderRadius: BorderRadius.circular(12),
      ),
      padding: const EdgeInsets.all(16),
      child: Column(
        crossAxisAlignment: CrossAxisAlignment.start,
        children: [
          Text(
            title,
            style: const TextStyle(
              fontSize: 18,
              fontWeight: FontWeight.w600,
              color: Colors.white,
            ),
          ),
          const SizedBox(height: 12),
          child,
        ],
      ),
    );
  }
  
  Widget _buildCalibrationSection() {
    return Column(
      children: [
        ElevatedButton(
          onPressed: _isNavigating ? null : _calibrateEnvironment,
          style: ElevatedButton.styleFrom(
            backgroundColor: _isCalibrated ? Colors.green : Colors.blue,
            minimumSize: const Size(double.infinity, 48),
          ),
          child: Text(
            _isCalibrated ? '✓ Recalibrate' : 'Calibrate Room',
            style: const TextStyle(
              fontSize: 16,
              fontWeight: FontWeight.w600,
            ),
          ),
        ),
        const SizedBox(height: 8),
        const Text(
          'Tap to calibrate microphone for your surroundings',
          style: TextStyle(
            fontSize: 12,
            color: Colors.white70,
          ),
        ),
      ],
    );
  }
  
  Widget _buildNavigationSection() {
    return Column(
      children: [
        Row(
          children: [
            Expanded(
              child: ElevatedButton(
                onPressed: _isCalibrated && !_isNavigating ? _startNavigation : null,
                style: ElevatedButton.styleFrom(
                  backgroundColor: _isNavigating ? Colors.green : Colors.deepPurple,
                  minimumSize: const Size(0, 48),
                ),
                child: Text(
                  _isNavigating ? 'Navigating...' : 'Start Navigation',
                  style: const TextStyle(
                    fontSize: 16,
                    fontWeight: FontWeight.w600,
                  ),
                ),
              ),
            ),
            const SizedBox(width: 8),
            ElevatedButton(
              onPressed: _isNavigating ? _stopNavigation : null,
              style: ElevatedButton.styleFrom(
                backgroundColor: Colors.red,
                minimumSize: const Size(80, 48),
              ),
              child: const Text(
                'Stop',
                style: TextStyle(
                  fontSize: 16,
                  fontWeight: FontWeight.w600,
                ),
              ),
            ),
          ],
        ),
      ],
    );
  }
  
  Widget _buildObstacleVisualization() {
    return Column(
      children: [
        Container(
          height: 200,
          decoration: BoxDecoration(
            color: Colors.grey.shade800,
            borderRadius: BorderRadius.circular(8),
          ),
          child: Stack(
            children: [
              // User position
              const Center(
                child: CircleAvatar(
                  radius: 10,
                  backgroundColor: Colors.cyan,
                  child: CircleAvatar(
                    radius: 6,
                    backgroundColor: Colors.white,
                  ),
                ),
              ),
              
              // Obstacles
              ..._obstacles.map((obstacle) {
                final color = _getObstacleColor(obstacle.distance);
                return Positioned(
                  left: 50 + obstacle.angle * 0.5,
                  top: 50 - obstacle.distance * 10,
                  child: Container(
                    width: 16,
                    height: 16,
                    decoration: BoxDecoration(
                      color: color,
                      shape: BoxShape.circle,
                      boxShadow: [
                        BoxShadow(
                          color: color.withOpacity(0.5),
                          blurRadius: 8,
                        ),
                      ],
                    ),
                  ),
                );
              }).toList(),
            ],
          ),
        ),
        const SizedBox(height: 8),
        Text(
          '${_obstacles.length} obstacles detected',
          style: const TextStyle(
            fontSize: 14,
            color: Colors.white70,
          ),
        ),
      ],
    );
  }
  
  Widget _buildVoiceControlSection() {
    return Column(
      children: [
        ElevatedButton(
          onPressed: _handleVoiceCommand,
          style: ElevatedButton.styleFrom(
            backgroundColor: Colors.purple,
            minimumSize: const Size(double.infinity, 48),
          ),
          child: const Row(
            mainAxisAlignment: MainAxisAlignment.center,
            children: [
              Icon(Icons.mic),
              SizedBox(width: 8),
              Text(
                'Voice Command',
                style: TextStyle(
                  fontSize: 16,
                  fontWeight: FontWeight.w600,
                ),
              ),
            ],
          ),
        ),
        const SizedBox(height: 12),
        Container(
          padding: const EdgeInsets.all(12),
          decoration: BoxDecoration(
            color: Colors.grey.shade800,
            borderRadius: BorderRadius.circular(8),
          ),
          child: const Column(
            crossAxisAlignment: CrossAxisAlignment.start,
            children: [
              Text(
                'Try saying:',
                style: TextStyle(
                  fontSize: 14,
                  color: Colors.white70,
                ),
              ),
              SizedBox(height: 8),
              Text('• "Calibrate room"', style: TextStyle(color: Colors.white)),
              Text('• "Start navigation"', style: TextStyle(color: Colors.white)),
              Text('• "What is in front"', style: TextStyle(color: Colors.white)),
              Text('• "Emergency stop"', style: TextStyle(color: Colors.white)),
            ],
          ),
        ),
      ],
    );
  }
  
  Widget _buildFooter() {
    return Container(
      padding: const EdgeInsets.all(16),
      decoration: BoxDecoration(
        color: Colors.grey.shade900,
        borderRadius: const BorderRadius.only(
          topLeft: Radius.circular(20),
          topRight: Radius.circular(20),
        ),
      ),
      child: Column(
        children: [
          const Text(
            'Privacy-first • No camera • Azure AI Powered',
            style: TextStyle(
              fontSize: 12,
              color: Colors.white70,
            ),
          ),
          const SizedBox(height: 8),
          Row(
            mainAxisAlignment: MainAxisAlignment.center,
            children: [
              TextButton(
                onPressed: () {},
                child: const Text('Settings'),
              ),
              TextButton(
                onPressed: () {},
                child: const Text('Help'),
              ),
              TextButton(
                onPressed: () {},
                child: const Text('About'),
              ),
            ],
          ),
        ],
      ),
    );
  }
  
  Color _getObstacleColor(double distance) {
    if (distance < 1) return Colors.red;
    if (distance < 2) return Colors.orange;
    if (distance < 3) return Colors.yellow;
    return Colors.green;
  }
}

// Model classes
class Obstacle {
  final String type;
  final double distance;
  final double angle;
  final double confidence;
  
  Obstacle({
    required this.type,
    required this.distance,
    required this.angle,
    required this.confidence,
  });
  
  factory Obstacle.fromJson(Map<String, dynamic> json) {
    return Obstacle(
      type: json['type'],
      distance: (json['distance'] as num).toDouble(),
      angle: (json['angle'] as num).toDouble(),
      confidence: (json['confidence'] as num).toDouble(),
    );
  }
}

